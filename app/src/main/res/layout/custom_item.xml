<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_nama_bimbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_school"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:padding="5dp"
                android:text="Nama Bimbel"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_alamat_bimbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_place"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:padding="5dp"
                android:text="Alamat Bimbel"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_kecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Kecamatan"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_trending_up"
                android:drawablePadding="3dp"
                android:drawableTint="@color/colorPrimary"
                android:padding="5dp"
                android:text="Distance"
                android:textSize="15dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>